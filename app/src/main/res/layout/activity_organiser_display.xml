<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".OrganiserDisplay"
    android:orientation="vertical"
    android:background="@color/colorPrimaryBack">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To Contest Management"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"/>



    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD EVENT"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorPrimaryDark"/>



    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:text="ADD JUDGE"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:text="ADD SPONSOR"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:text="UPDATE EVENT"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorPrimaryDark" />




        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:text="VIEW EVENT"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryDark"/>



        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:text="VIEW JUDGE"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:text="VIEW SPONSOR"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryDark" />






</LinearLayout>